# SecOps MCP - Variables de Entorno
# Copia este archivo a .env y configura tus valores

# Configuración del servidor MCP principal
MCP_HOST=0.0.0.0
MCP_PORT=8080

# Tokens de API (opcionales)
WPSCAN_API_TOKEN=your_wpscan_api_token_here

# Configuración de red
DOCKER_NETWORK_SUBNET=172.20.0.0/16

# Configuración de volúmenes
NUCLEI_TEMPLATES_PATH=./tools/docker/nuclei/templates
FFUF_WORDLISTS_PATH=./tools/docker/ffuf/wordlists
SQLMAP_OUTPUT_PATH=./tools/docker/sqlmap/output
AMASS_CONFIG_PATH=./tools/docker/amass/config
HASHCAT_WORDLISTS_PATH=./tools/docker/hashcat/wordlists
HASHCAT_HASHES_PATH=./tools/docker/hashcat/hashes

# Configuración de logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Configuración de seguridad
SCAN_TIMEOUT=300
MAX_CONCURRENT_SCANS=5
RATE_LIMIT_PER_MINUTE=60

# Configuración de herramientas específicas
NUCLEI_SEVERITY_FILTER=critical,high,medium
NMAP_DEFAULT_PORTS=1-1000
FFUF_DEFAULT_WORDLIST=/usr/share/wordlists/dirb/common.txt
SQLMAP_RISK_LEVEL=1
SQLMAP_LEVEL=1 